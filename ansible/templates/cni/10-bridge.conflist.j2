{
  "cniVersion": "0.4.0",
  "name": "olympus_bridge",
  "plugins": [
    {
      "type": "bridge",
      "bridge": "cni0",
      "ipMasq": true,
      "hairpinMode": true,
      "promiscMode": true,

      "ipam": {
        "type": "host-local",
        "subnet": "10.1.0.0/16",
        "gateway": "10.1.0.1",
        "routes": [
            {"dst": "0.0.0.0/0"}
        ]
      },
      "dns": {
        "nameservers": [ "10.1.0.1" ]
      }
    },
    {
      "type": "tuning",
      "capabilities": {
        "mac": true
      },
      "sysctl": {
        "net.core.somaxconn": "500"
      }
    },
    {
        "type": "portmap",
        "capabilities": {"portMappings": true}
    }
  ]
}
