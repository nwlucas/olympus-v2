{
  "cniVersion": "0.4.0",
  "name": "olympus_macvlan",
  "plugins": [
    {
      "type": "macvlan",
      "master": "{{ container_vlan_name }}@{{ container_interface }}",
      "mode": "bridge",

      "ipam": {
        "type": "dhcp"
      }
    },
    {
      "type": "tuning",
      "capabilities": {
        "mac": true
      },
      "sysctl": {
        "net.core.somaxconn": "500"
      }
    },
    {
        "type": "portmap",
        "capabilities": {
          "portMappings": true
        },
        "snat": true
    }
  ]
}

